{
  "$id": "Table.schema.json",
  "title": "Table",
  "description": "A reference to a table.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "owner": {
      "type": "string"
    },
    "primaryKey": {
      "$ref": "References/ColumnReference.schema.json"
    },
    "columns": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "$ref": "Column.schema.json"
        }
      }
    },
    "relationships": {
      "type": "array",
      "items": {
        "$ref": "TableRelationship.schema.json"
      }
    }
  },
  "required": ["columns"]
}